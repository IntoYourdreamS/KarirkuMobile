<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detail Pekerjaan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:gravity="center" />
    </LinearLayout>

    <!-- ScrollView Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Info Perusahaan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imgCompanyLogo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/iconloker"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Judul Pekerjaan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Perusahaan"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lokasi"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Info Waktu & Pendaftar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvPostedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Hari lalu"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvApplicants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ 130 Pendaftar"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Tags -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvTag1"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_tag"
                    android:text="Tag1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvTag2"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_tag"
                    android:text="Tag2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvTag3"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_tag"
                    android:text="Tag3"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Deskripsi Pekerjaan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Pekerjaan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvJobDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi lengkap pekerjaan akan ditampilkan di sini."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <!-- Persyaratan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persyaratan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Pengalaman 2+ tahun\nâ€¢ Menguasai Java/Kotlin"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <!-- Informasi Tambahan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi Tambahan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvAdditionalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Jenis: Full-time\nâ€¢ Lokasi: Kantor Pusat"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>

    <!-- âœ… FIXED: Footer dengan 2 Button (WhatsApp & Lamar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp">

        <!-- Button WhatsApp -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWhatsApp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ’¬ Hubungi via WhatsApp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#25D366"
            app:strokeColor="#25D366"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconTint="#25D366"
            android:layout_marginBottom="12dp"/>

        <!-- Button Lamar -->
        <Button
            android:id="@+id/btnApplywa"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“„ Lamar Pekerjaan Ini"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>