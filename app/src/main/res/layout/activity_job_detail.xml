<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detail Pekerjaan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:gravity="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Info Perusahaan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imgCompanyLogo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/iconloker"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Judul Pekerjaan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Perusahaan"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lokasi"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Info Waktu & Pendaftar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvPostedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Hari lalu"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvApplicants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 130 Pendaftar"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Tags -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvTag1"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_tag"
                    android:text="Tag1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvTag2"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_tag"
                    android:text="Tag2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvTag3"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_tag"
                    android:text="Tag3"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Deskripsi Pekerjaan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Pekerjaan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvJobDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi lengkap pekerjaan akan ditampilkan di sini. Anda akan bertanggung jawab untuk mengembangkan aplikasi mobile dan bekerja dengan tim yang dinamis."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <!-- Persyaratan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persyaratan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Pengalaman 2+ tahun di Android Development\n• Menguasai Java/Kotlin\n• Memahami REST API\n• Memiliki portofolio project sebelumnya"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <!-- Informasi Tambahan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi Tambahan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvAdditionalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Jenis: Full-time\n• Lokasi: Kantor Pusat\n• Waktu: Senin - Jumat, 09:00 - 17:00\n• Gaji: Dirahasiakan"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Footer dengan Tombol Lamar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Lamar pekerjaan ini"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>