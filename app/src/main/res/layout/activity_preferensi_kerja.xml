<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9FAFC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Preferensi Kerja"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#0CADF1"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- CARD -->
        <LinearLayout
            android:id="@+id/cardPreferensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_card"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Jenis Pekerjaan -->
            <TextView
                android:text="Jenis Pekerjaan"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/inputJenisPekerjaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_input"
                android:hint="Belum dipilih"
                android:focusable="false"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tagJobContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                android:layout_marginTop="8dp" />

            <!-- Lokasi Kerja -->
            <TextView
                android:text="Lokasi Kerja"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/inputLokasiKerja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_input"
                android:hint="Belum dipilih"
                android:focusable="false"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tagLokasiContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                android:layout_marginTop="8dp"/>

            <!-- Gaji -->
            <TextView
                android:text="Ekspektasi Gaji"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinnerGaji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"/>

            <!-- Jenis Kontrak -->
            <TextView
                android:text="Jenis Kontrak"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/inputJenisKontrak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_input"
                android:hint="Belum dipilih"
                android:focusable="false"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tagKontrakContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                android:layout_marginTop="8dp" />

            <!-- Mode Kerja -->
            <TextView
                android:text="Mode Kerja"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <CheckBox
                android:id="@+id/checkRemote"
                android:text="Remote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <CheckBox
                android:id="@+id/checkHybrid"
                android:text="Hybrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/checkOnsite"
                android:text="Onsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="SIMPAN"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0CADF1"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
