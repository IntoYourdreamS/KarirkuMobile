<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginLeft="24dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgnotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:src="@drawable/notification" />

        <ImageView
            android:id="@+id/imgprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imageprofile"
            android:layout_marginRight="24dp" />
    </LinearLayout>

    <!-- Judul -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari pekerjaan yang paling \nrelevan denganmu"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="24dp"
        android:textSize="20sp"
        android:fontFamily="@font/interdisplaybold"
        android:textColor="@color/blue" />

    <!-- Search bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:minHeight="56dp"
        android:background="@drawable/roundedshape"
        android:padding="12dp"
        android:elevation="2dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Cari pekerjaan atau perusahaan..."
            android:background="@null"
            android:padding="0dp"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/filter"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="237dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tab_semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selected"
            android:paddingVertical="8dp"
            android:paddingHorizontal="20dp"
            android:text="Semua"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:fontFamily="@font/interdisplaybold" />


        <TextView
            android:id="@+id/tab_terbaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_stroke"
            android:paddingVertical="8dp"
            android:paddingHorizontal="20dp"
            android:text="Terbaru"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/interdisplaybold" />

        <TextView
            android:id="@+id/tab_terlama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_stroke"
            android:paddingVertical="8dp"
            android:paddingHorizontal="20dp"
            android:text="Terlama"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/interdisplaybold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="290dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/titleRecommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rekomendasi"
            android:textSize="18sp"
            android:fontFamily="@font/interdisplaybold"
            android:textColor="@color/blue"
            android:gravity="start" />

        <TextView
            android:id="@+id/seeAllText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat semua"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/interdisplaybold"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="6dp"
            android:gravity="end" />
    </LinearLayout>

    <!-- Daftar Job -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerJobs"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginTop="340dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:padding="16dp" />

</FrameLayout>
