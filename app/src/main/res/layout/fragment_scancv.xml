<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".scancvFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:gravity="center_vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload CV"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/interdisplaybold"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUploadSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:id="@+id/layoutUploadPDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingVertical="20dp"
            android:paddingHorizontal="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_pdf_upload"
                android:layout_marginEnd="10dp"
                android:contentDescription="Upload File" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload file PDF dari HP"
                    android:textSize="16sp"
                    android:textColor="#0D99FF"
                    android:fontFamily="@font/interdisplaybold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(PDF, maks. 5 MB)"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CV-mu akan otomatis dikirimkan untuk lamaran kerjamu selanjutnya. Untuk mengupdate, upload CV terbarumu di Profil."
        android:textSize="11sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/interdisplaybold"
        android:gravity="start"
        android:layout_marginTop="22dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:lineSpacingExtra="3dp" />

</LinearLayout>
