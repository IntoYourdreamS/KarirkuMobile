<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/shape_stroke"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- 🏢 Logo perusahaan -->
    <ImageView
        android:id="@+id/imgCompany"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/iconloker"
        android:contentDescription="@string/company_logo" />

    <!-- 📄 Informasi lowongan -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nama perusahaan -->
        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Perusahaan"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <!-- Lokasi -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <!-- Judul pekerjaan -->
        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Judul Pekerjaan"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp" />

        <!-- Waktu dan pendaftar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPostedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Hari lalu"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvApplicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="130 Pendaftar"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 🏷️ Tag kategori -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTag1"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/shape_tag"
                android:text="Tag1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvTag2"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/shape_tag"
                android:text="Tag2"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvTag3"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/shape_tag"
                android:text="Tag3"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 🔖 Tombol simpan -->
    <ImageView
        android:id="@+id/btnSave"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top"
        android:contentDescription="@string/save_job"
        android:src="@drawable/icsimpan" />

</LinearLayout>
